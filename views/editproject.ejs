<!DOCTYPE html>
<html lang="en">
   <head>
      <% include dashboardheader.html %>
   </head>
   <body>
      <div class='container'>
      <div class="col-md-12 back">
          <h1>Project Management</h1>
          <div class="col-md-6"> </div>
          <div class="col-md-6">
          <nav>
           <ul>
            <li class="li"><a href="/">Project List</a></li>
            <li class="li"><a href="/addproject/<%=data.attributes.userid%>">Add New Project</a></li>
            <li class="li"><a href="/logout">Logout</a></li>
           </ul>
           </nav>
           </div>
           </div>
         <div class='form-box'>
         <h2 class='text-center'>Edit Project Details</h2>
      
      <form method="post" action="/editproject">
         <!--Error part -->
            <% if(typeof(errorMessage) !== 'undefined') {%>
            <div class='alert alert-success'>
               <%= errorMessage %>
            </div>
            <%}%>
            <input type="hidden" name="id" value="<%= data.attributes.id %>">
           <div class="form-group">
             <label for="name">Name:</label>
             <input type="text" name='name' value="<%= data.attributes.name %>" placeholder='Name' required class="form-control" id="name">
           </div>

            <div class="form-group">
             <label for="description">Description:</label>
             <input type="text" name='description' value="<%= data.attributes.description %>" placeholder='Description' required class="form-control" id="description">
           </div>


           <div class="form-group">
             <label for="start_date">Start Date:</label>
             <input type="date" name='start_date' value="<%= moment(data.attributes.start_date).format('YYYY-MM-DD'); %>" placeholder='start_date' required class="form-control" id="start_date">
           </div>

           <div class="form-group">
             <label for="end_date">End Date:</label>
             <input type="date" name='end_date' value="<%= moment(data.attributes.end_date).format('YYYY-MM-DD'); %>" placeholder='end_date' required class="form-control" id="end_date">
           </div>

           <center><input type="submit" name="editproject" id="editproject" class='btn btn-primary' value="Update"/></center>
      </form>
      </div>
   </div>
   </body>
</html>
